pipeline {
    agent any
    tools {
        maven 'maven-3.6.0'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
         def mvnHome = tool name: 'maven-3.6.0', type:'maven'
         sh "${mvnHome}/bin/mvn clean package"
        }
    }
}