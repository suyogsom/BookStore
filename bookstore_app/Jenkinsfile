pipeline {
    agent any
    stages {
        stage('build with unit test, package and store the jar') {
            steps {
                sh 'mvn -f bookstore_app/bookstore-server/pom.xml clean package'
            }
        }
        
        stage('deploy app') {
            steps {
                sh 'java -jar /bookstoreartifactory/*.jar'
            }
        }
        
        stage('run integration tests') {
            steps {
                sh 'mvn -f bookstore_app/bookstore-integration-test/pom.xml clean test'
            }
        }
    }
}
